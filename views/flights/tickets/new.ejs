<%- include('../../partials/header') %>


<form method="POST" action="./<%= flight._id %>">
    <div class="form-group"></div>
        <label for="seat">Seat (A-F | 1-9)</label>
        <input name="seat" required pattern="[A-F][1-9]\d?">
    </div>
    <div class="form-group">
        <label for="price">Price (Â£)</label>
        <input type="number" min="0" class="form-control" required name="price">
    </div>
    <div class="form-group">
        <label for="flight">Flight:</label> <br>
        <%= flight.airline %> <br>
        <%= flight.airport %> <br>
        <%= flight.flightNo %> <br>
        <%= flight.departs.toLocaleDateString() %> <br>
    </div>
    <button type="submit" class="btn mt-3 btn-primary">Add Ticket</button>
</form>



<%- include('../../partials/footer') %>